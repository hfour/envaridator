{
  "name": "envaridator",
  "version": "1.0.0",
  "description": "Environment variable validator for TypeScript",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hfour/envaridator.git"
  },
  "keywords": [
    "envaridator",
    "validator",
    "toi",
    "environment",
    "validation"
  ],
  "author": "Hristijan Lubeski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hfour/envaridator/issues"
  },
  "homepage": "https://github.com/hfour/envaridator#README.md",
  "dependencies": {
    "@toi/toi": "^1.0.5",
    "@types/node": "^10.12.7"
  },
  "jest": {
    "preset": "ts-jest",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    },
    "testPathIgnorePatterns":["<rootDir>/build/", "<rootDir>/node_modules/"]
  },
  "devDependencies": {
    "@toi/toix": "^1.0.6",
    "@types/jest": "^23.3.10",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2"
  }
}
